        xmlns:local="clr-namespace:TeleDASis"
        mc:Ignorable="d"
        Title="Baja Usuario" Height="382.345" Width="625.581" WindowStartupLocation="CenterScreen">
    <Grid Margin="5,0,0,3">
        <Label x:Name="lDni" Content="DNI:" HorizontalAlignment="Left" Margin="41,33,0,0" VerticalAlignment="Top" Width="34"/>
        <Label x:Name="lName" Content="Nombre:" HorizontalAlignment="Left" Margin="41,97,0,0" VerticalAlignment="Top" Width="64"/>
        <Label x:Name="lPrimerApellido" Content="1ºApellido:" HorizontalAlignment="Left" Margin="252,95,0,0" VerticalAlignment="Top" Width="75"/>
