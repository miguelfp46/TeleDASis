<Window x:Class="TeleDASis.ConsultasUsuarios"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TeleDASis"
        mc:Ignorable="d"
        Title="Consultas Usuarios" Height="471.01" Width="761.135" WindowStartupLocation="CenterScreen">
    <Grid Margin="0,0,3,2">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="39*" />
            <ColumnDefinition Width="200*" />
            <ColumnDefinition Width="200*" />
            <ColumnDefinition Width="200*" />
            <ColumnDefinition Width="39*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height = "*"/>
            <RowDefinition Height = "*"/>
            <RowDefinition Height = "*"/>
            <RowDefinition Height = "*"/>
            <RowDefinition Height = "*"/>
            <RowDefinition Height = "*"/>
            <RowDefinition Height = "*"/>
            <RowDefinition Height = "*"/>
            <RowDefinition Height = "*"/>

        </Grid.RowDefinitions>
        <GroupBox x:Name="groupBox" Header="Buscar por:" HorizontalAlignment="Left" Margin="12,21,0,0" VerticalAlignment="Top" Grid.ColumnSpan="5" Height="259" Grid.RowSpan="6" Width="731"/>
        <CheckBox x:Name="dni"  Grid.Column="3" HorizontalAlignment="Left" Margin="12,17,0,0" Grid.Row="1" VerticalAlignment="Top"/>
        <Label x:Name="label1" Content="DNI:" VerticalAlignment = "Center"  Grid.Row="1" Grid.Column="3"  Height="26" Margin="28,11,93,8"/>
        <TextBox x:Name="txtDni" Text="" VerticalAlignment = "Center" Width = "100" Margin="103,17,18,17" Grid.Row="1" Grid.Column="3"/>

        <CheckBox x:Name="nombre"  Grid.Column="1" HorizontalAlignment="Left" Margin="12,17,0,0" Grid.Row="1" VerticalAlignment="Top"/>
        <Label x:Name="label2" Content="Nombre:" VerticalAlignment = "Bottom" Grid.Row="1" Grid.Column="1" Height="26" Margin="28,0,138,11"/>
        <TextBox x:Name="txtNombre" Text="" VerticalAlignment = "Bottom"  Margin="86,0,18,14" PreviewTextInput="Letras" Grid.Row="1" Grid.Column="1" Height="17"/>

        <CheckBox x:Name="apellido1"  Grid.Column="1" HorizontalAlignment="Left" Margin="12,17,0,0" Grid.Row="2" VerticalAlignment="Top"/>
        <Label x:Name="label3" Margin="28,11,93,8" Content="Apellido:" VerticalAlignment = "Center" Width = "100" Grid.Row="2" Grid.Column="1" Height="26"/>
        <TextBox x:Name="txtApellido1" Text="" VerticalAlignment = "Bottom"  Margin="92,0,12,14" PreviewTextInput="Letras" Grid.Row="2" Grid.Column="1"/>

        <CheckBox x:Name="apellido2"  Grid.Column="2" HorizontalAlignment="Left" Margin="12,17,0,0" Grid.Row="2" VerticalAlignment="Top"/>
        <Label x:Name="label4" Margin="28,11,94,6" Content="Apellido:" VerticalAlignment = "Center" Width = "100" Grid.Row="2" Grid.Column="2" Height="28"/>
        <TextBox x:Name="txtApellido2" Text="" VerticalAlignment = "Center" Width = "100" Margin="103,17,19,17" Grid.Row="2" Grid.Column="2"/>

        <CheckBox x:Name="tel"  Grid.Column="1" HorizontalAlignment="Left" Margin="12,17,0,0" Grid.Row="3" VerticalAlignment="Top"/>
        <Label x:Name="label5" Margin="28,11,93,6"  Content="Teléfono:" VerticalAlignment = "Center" Width = "100" Grid.Row="3" Grid.Column="1" Height="31"/>
        <TextBox x:Name="txtTelefono" Text="" VerticalAlignment = "Center" Width = "100" Margin="103,17,18,17" Grid.Row="3" Grid.Column="1"/>

        <CheckBox x:Name="tel_fam"  Grid.Column="2" HorizontalAlignment="Left" Margin="12,17,0,0" Grid.Row="3" VerticalAlignment="Top"/>
        <Label x:Name="label6"  Margin="28,11,93,3" Content="Tel.Familiar:" VerticalAlignment = "Center" Width = "100" Grid.Row="3" Grid.Column="2" Height="31"/>
        <TextBox x:Name="txtTelFamiliar" Text="" VerticalAlignment = "Center" Width = "100" Margin="108,17,13,17" Grid.Row="3" Grid.Column="2"/>

        <CheckBox x:Name="mov"  Grid.Column="3" HorizontalAlignment="Left" Margin="12,17,0,0" Grid.Row="3" VerticalAlignment="Top"/>
        <Label x:Name="label7" Margin="28,11,94,3" Content="Móvil:" VerticalAlignment = "Center" Width = "100" Grid.Row="3" Grid.Column="3" Height="31"/>
        <TextBox x:Name="txtMovil" Text="" VerticalAlignment = "Center" Width = "100" Margin="103,17,19,17" Grid.Row="3" Grid.Column="3"/>

        <CheckBox x:Name="ts"  Grid.Column="3" HorizontalAlignment="Left" Margin="12,17,0,0" Grid.Row="2" VerticalAlignment="Top"/>
        <Label x:Name="label8" Content="T.S.:" VerticalAlignment = "Center" Width = "100"  Margin="28,11,93,8" Grid.Row="2" Grid.Column="3" Height="26"/>
        <TextBox x:Name="txtTarjetaSanitaria" Text="" VerticalAlignment = "Center" Width = "100" Margin="103,17,18,15" Grid.Row="2" Grid.Column="3" Height="16"/>

        <CheckBox x:Name="pobla"  Grid.Column="2" HorizontalAlignment="Left" Margin="12,17,0,0" Grid.Row="4" VerticalAlignment="Top"/>
        <Label x:Name="label9"  Margin="28,11,93,2" Content="Poblacion:" VerticalAlignment = "Center" Width = "100" Grid.Row="4" Grid.Column="2" Height="32"/>
        <TextBox x:Name="txtPoblacion" Text="" VerticalAlignment = "Center" Width = "100" Margin="108,17,13,16" Grid.Row="4" Grid.Column="2"/>

        <CheckBox x:Name="dir"  Grid.Column="3" HorizontalAlignment="Left" Margin="12,17,0,0" Grid.Row="4" VerticalAlignment="Top"/>
        <Label x:Name="label10" Margin="28,11,94,8" Content="Direccion:" VerticalAlignment = "Center" Width = "100" Grid.Row="4" Grid.Column="3" Height="26"/>
        <TextBox x:Name="txtDir" Text="" VerticalAlignment = "Center" Width = "100" Margin="103,17,19,16" Grid.Row="4" Grid.Column="3"/>

        <Label x:Name="label11" Margin="28,11,93,6" Content="Puerta:" VerticalAlignment = "Center" Width = "100" Grid.Row="4" Grid.Column="1" Height="28"/>
        <TextBox x:Name="txtPur" Text="" VerticalAlignment = "Center" Width = "100" Margin="103,17,18,16" Grid.Row="4" Grid.Column="1"/>
        <CheckBox x:Name="pue"  Grid.Column="1" HorizontalAlignment="Left" Margin="12,17,0,0" Grid.Row="4" VerticalAlignment="Top"/>

        <Button x:Name="btnTerminar" Content="Terminar" Width="121"  HorizontalAlignment="Left" Margin="60,7,0,0" Grid.Row="5" Grid.Column="2" VerticalAlignment="Top" Height="23" Click="Button_Click"/>

       
        <Button x:Name="btnBuscar" Content="Buscar" Grid.Column="1" HorizontalAlignment="Left" Margin="60,7,0,0" Grid.Row="5" VerticalAlignment="Top" Width="131" Height="23" Click="btnBuscar_Click"/>
       
        <GroupBox x:Name="groupBox1" Header="Resultado de la Busqueda:" HorizontalAlignment="Left" Margin="5,36,0,0" Grid.Row="5" VerticalAlignment="Top" Grid.ColumnSpan="5" Width="Auto" Height="Auto" Grid.RowSpan="4">
            <DataGrid x:Name="dtGConsultas" ItemsSource= "{Binding }" HorizontalAlignment="Left" Margin="10,3,0,0" Grid.Row="6" VerticalAlignment="Top" Grid.ColumnSpan="5" Height="132" Width="730" Grid.RowSpan="3" SelectionChanged="dtGConsultas_SelectionChanged"/>
        </GroupBox>








    </Grid>
</Window>

